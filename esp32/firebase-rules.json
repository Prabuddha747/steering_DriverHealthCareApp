{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() == 'admin' || auth.uid == $uid)"
      }
    },
    "usernames": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'"
    },
    "drivers": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'",
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'admin')"
      }
    },
    "devices": {
      ".read": "auth != null",
      "$mac": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'"
      }
    },
    "deviceControl": {
      ".read": "auth != null",
      "$mac": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() == 'admin' || root.child('users').child(auth.uid).child('role').val() == 'driver')"
      }
    },
    "sessions": {
      "$driverUid": {
        ".read": "auth != null && (auth.uid == $driverUid || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": "false"
      }
    },
    "driverData": {
      "$driverUid": {
        "sessions": {
          ".read": "auth != null && (auth.uid == $driverUid || root.child('users').child(auth.uid).child('role').val() == 'admin')"
        }
      }
    }
  }
}
